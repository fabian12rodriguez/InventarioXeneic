@model Inventario.ViewModels.VMInventario

@{
    ViewBag.Title = "Modificar usuario";
    Layout = "~/Views/Shared/_LayoutTecnico.cshtml";
}



@using (Html.BeginForm())
{
<div class="main">
    <div class="form-horizontal">
        <br />
        <h4>GENERAR NUEVA CONTRASEÑA</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>

    @Html.HiddenFor(Model => Model.Id_usuario)
    <div class="col-md-6 ">
        <div class="row">
            <div class="col-lg-12">
                <div class="form-horizontal">

                    <div class="form-group">
                        <label class="col-sm-12 control-label">Nueva Contraseña</label>
                        <div class="col-sm-12">
                            @Html.PasswordFor(model => model.Password_usuario, htmlAttributes: new { @class = "form-control", @id = "txtPassword", required = "required" })
                        </div>
                    </div>
                    <div class="form-group" text-right>
                        <div class="col-sm-12">
                            <button class="btn btn-warning" type="submit">Recuperar</button>
                        </div>
                        <br />
                        <br />
                        <div class="col-sm-12">
                            <a href="@Url.Action("Login", "Login")" class="btn btn-dark">Ir a login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    }

