@model IEnumerable<Inventario.ViewModels.VMInventario>


@{
    ViewBag.Title = "Reporte";
}
<br />
<br />
<h2>Usuarios por area</h2>
<hr />
@using (Html.BeginForm())
{

    <div class="row">
        <div class="col-lg-12 text-center">
            <img src="~/images/xeneic_logo.png" width="200" height="200">
        </div>
        <div class="col-lg-12  text-center">
            <br />
            <table class="table table-bordered table-striped">
                <thead class="bg-warning text-white">
                    <tr>
                        <th class="text-center">
                            Area
                        </th>
                        <th class="text-center">
                            Cantidad
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="table-light text-center text-dark">
                            <td>
                                @Html.DisplayFor(modelItem => item.Area)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cantidad)
                            </td>

                        </tr>
                    }
                </tbody>
            </table>

        </div>
        <div class="form-group" text-right>
            <div class="col-sm-6">
                <a href="@Url.Action("Print2", "Reporte")" class="btn btn-info" target="_blank">Imprimir PDF</a>
            </div>
        </div>


    </div>
}
