@model Inventario.ViewModels.VMInventario
@{
    ViewBag.Title = "Login2";
    Layout = null;
}

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<link href="~/Content/Login2.css" rel="stylesheet" />
<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Varela+Round&display=swap" rel="stylesheet">
<!------ Include the above in your HEAD tag ---------->

@using (Html.BeginForm())
{
    <div class="sidenav">
        <div class="login-main-text">
            <h1>XENEIC<br>INVENTORY</h1>
            <br />
            <!--<p>Login or register from here to access.</p>---------->
            @*<img src="~/Images/inventario.png" width="400" height="341" />*@
            @* <img src="~/Images/inventario2.png" width="400" height="341">*@
            </div>
        </div>
        <div class="main">
            <div class="col-md-6 col-sm-12">
                <div class="login-form">
                    <form>
                        <div class="form-group">
                            <label>Usuario</label>
                            @Html.TextBoxFor(model => model.Codigo_usuario, htmlAttributes: new { @class = "form-control", @id = "txtNombre", placeholder = "User", required = "required" })
                            @*<input type="text" class="form-control" placeholder="User Name">*@
                        </div>
                        <div class="form-group">
                            <label>Contraseña</label>
                            @Html.TextBoxFor(model => model.Password_usuario, htmlAttributes: new { @class = "form-control", @id = "txtNombre", placeholder = "Password", required = "required" })
                            @* <input type="password" class="form-control" placeholder="Password">*@
                        </div>
                        <button type="submit" class="btn btn-black">Login</button>
                        <a class="navbar-brand" href="@Url.Action("Index","Home",new {})">Reestablecer cuenta</a>
                        @*<button type="submit" class="btn btn-secondary">Registrar</button>*@
                        @*<a class="dropdown-item" href="@Url.Action("BajaStock", "Inventario", new { @id_articulo=VMInventario.Id_articulo})">Dar de baja</a>*@
                    </form>
            </div>
        </div>
    </div>
}