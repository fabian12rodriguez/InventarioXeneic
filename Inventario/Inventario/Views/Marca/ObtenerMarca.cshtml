@model Inventario.Models.Marca

@{
    ViewBag.Title = "Modificar marca";
}


<div class="row">
    <div class="col-sm-12">
        <div>
            <br />
            <h4>DATOS DE LAS MARCAS</h4>
            <hr />
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.HiddenFor(Model => Model.Id_marca)
    <div class="row">
        <div class="col-lg-6">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-6 control-label">Nombre</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.Descripcion_marca, htmlAttributes: new { @class = "form-control", @id = "txtNombre", required = "required" })
                    </div>
                </div>
                <div class="form-group text-right">
                    <div class="col-sm-6">
                        <button class="btn btn-primary" type="submit">
                            Actualizar
                        </button>
                    </div>
                </div>
                <div class="form-group text-right">
                    <div class="col-sm-12">
                        <a href="@Url.Action("ListadoMarcas", "Marca")" class="btn btn-warning">Ir al listado</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}