@model IEnumerable<Inventario.Models.Marca>

@{
    ViewBag.Title = "Listado de marcas";
}
<br />
<div class="row">
    <div class="col-sm-12">
        <div>
            <h3>Listado de Marcas</h3>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-9">
        <table class="table table-bordered table-striped bg-light">
            <thead>
                <tr>
                    <th class="text-center">
                        ID
                    </th>
                    <th class="text-center">
                        Nombre
                    </th>
                    <th class="text-center">
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var marca in Model)
                {
                <tr class="text-center">
                    <td>
                        @marca.Id_marca
                    </td>
                    <td>
                        @marca.Descripcion_marca
                    </td>
                    <td>
                        <a href="@Url.Action("ObtenerMarca", "Marca", new { @id_marca=marca.Id_marca})" class="btn btn-warning">Editar</a>
                        @* <a href="@Url.Action("ObtenerArticulo", "Articulo", new { @id_articulo=articulo.Id_articulo})" class="btn btn-danger">Deshabilitar</a>*@
                    </td>
                </tr>
                }
            </tbody>

        </table>
    </div>
    <div class="col-lg-9">
        <a href="@Url.Action("Index", "Home")" class="btn btn-success">Inicio</a>
    </div>
</div>
