@model Inventario.ViewModels.VMInventario

@{
    ViewBag.Title = "ObtenerArticulo";
    List<SelectListItem> itemsMarca = (List<SelectListItem>)ViewBag.itemsMarca;
    List<SelectListItem> itemsTipoArticulo = (List<SelectListItem>)ViewBag.itemsTipoArticulo;

}



<div class="row">
    <div class="col-sm-12">
        <div>
            <br />
            <h4>DATOS DE LOS ARTICULOS</h4>
        </div>
        <hr />
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.HiddenFor(Model => Model.Id_articulo)
    <div class="row">
        <div class="col-lg-6">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-6 control-label">Nombre</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.Nombre_articulo, htmlAttributes: new { @class = "form-control", @id = "txtNombre", required = "required" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Modelo</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.Modelo_articulo, htmlAttributes: new { @class = "form-control", @id = "txtModelo", required = "required" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Marca</label>
                    <div class="col-sm-6">
                        @Html.DropDownList("Id_marca", itemsMarca, "Seleccione Marca", htmlAttributes: new { @class = "form-control", required = "required" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Tipo articulo</label>
                    <div class="col-sm-6">
                        @Html.DropDownList("Id_tipo_articulo", itemsTipoArticulo, "Seleccione Tipo", htmlAttributes: new { @class = "form-control", required = "required" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Imagen</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.Imagen_articulo, htmlAttributes: new { @class = "form-control", @id = "txtImagen", required = "required" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Habilitado</label>
                    <div class="col-sm-6">
                        @Html.CheckBoxFor(model => model.Habilitado_articulo, htmlAttributes: new { @class = "checkbox", @id = "chkHabilitado_usuario" })
                    </div>
                </div>
                <div class="form-group text-center">
                    <div class="col-sm-6">
                        <button class="btn btn-primary" type="submit">
                            Actualizar
                        </button>
                    </div>
                </div>
                <br />
                <div class="form-group text-right">
                    <div class="col-sm-12">
                        <a href="@Url.Action("ListadoArticulos", "Inventario")" class="btn btn-warning">Ir al listado</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


