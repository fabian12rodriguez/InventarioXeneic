@model Inventario.ViewModels.VMInventario

@{
    Layout = "~/Views/Shared/_LayoutTecnico.cshtml";
    ViewBag.Title = "Registrar usuario";



}


@using (Html.BeginForm())
{
   
<div class="main">
    <div class="form-horizontal">
        <br />
        <h4>Reestablecer Usuario</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>
    <div class="col-md-6 ">
        <div class="form-group">
            <label class="col-sm-6 control-label">Usuario</label>
            <div class="col-sm-12">
                @Html.TextBoxFor(model => model.Codigo_usuario, htmlAttributes: new { @class = "form-control", @id = "txtCodigo", placeholder = "User", required = "required" })
                <label class="text-danger mb-4">@ViewBag.Mensaje</label>
            </div>
        </div>
        <div class="form-group" text-right>
            <div class="col-sm-12">
                <button class="btn btn-warning" type="submit">Reestablecer</button>
            </div>
            <br />
            <br />
            <div class="col-sm-12">
                <a href="@Url.Action("Login", "Login")" class="btn btn-dark">Ir a login</a>
            </div>
        </div>

    </div>
    </div>
    }

