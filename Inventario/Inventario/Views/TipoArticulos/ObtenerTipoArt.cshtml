@model Inventario.ViewModels.TipoArticulo

@{
        ViewBag.Title = "Modificar tipo de articulo";
    }



    <div class="row">
        <div class="col-sm-12">
            <div>
                <br />
                <h4>DATOS DE LOS TIPOS DE ARTICULOS</h4>
<hr />
            </div>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(Model => Model.Id_tipo_articulo)
        <div class="row">
            <div class="col-lg-6">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Tipo de articulo</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.Descripcion_tipo_articulo, htmlAttributes: new { @class = "form-control", @id = "txtNombre", required = "required" })
                        </div>
                    </div>
                    <div class="form-group text-right">
                        <div class="col-sm-6">
                            <button class="btn btn-warning" type="submit">
                                Actualizar
                            </button>
                        </div>
                    </div>
                    <div class="form-group text-right">
                        <div class="col-sm-12">
                            <a href="@Url.Action("ListadoTipoArt", "TipoArticulos", new { })" class="btn btn-primary"> Volver</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
