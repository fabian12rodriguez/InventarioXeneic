<div class="main">

    <div class="col-md-6 col-sm-12">

        <div class="login-form">
            <div class="form-horizontal">
                <h4>Inicio de sesion</h4>
                <hr />
            </div>
            <form>
                <div class="form-group">
                    <br />
                    <label>Usuario</label>
                    @Html.TextBoxFor(model => model.Codigo_usuario, htmlAttributes: new { @class = "form-control", @id = "txtNombre", placeholder = "User", required = "required" })
                </div>
                <div class="form-group">
                    <label>Contraseña</label>
                    @Html.PasswordFor(model => model.Password_usuario, htmlAttributes: new { @class = "form-control", @id = "txtPassword", placeholder = "Password", required = "required" })
                </div>
                <label class="text-danger mb-4">@ViewBag.Mensaje</label>

                <div class="form-group" text-right>
                    <div class="row">
                        <div class="col-sm-12 float-left">
                            <button type="submit" class="btn btn-warning font-weight-bold mr-4">Login</button>
                            <a href="@Url.Action("RegistrarUsuario", "Usuario")" class="btn btn-outline-dark font-weight-bolder ml-4">Registrar</a>
                        </div>
                        <div class="col-sm-12 p-2">
                            <a class="btn-link pl-2 text-muted" href="@Url.Action("ReestablecerUsuario","Usuario",new {@recuperar = true, @usuario = ""})">Reestablecer cuenta</a>
                        </div>

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
}