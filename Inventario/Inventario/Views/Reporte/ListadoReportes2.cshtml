@model IEnumerable<Inventario.ViewModels.VMInventario>

@*@model Concesionario_236.ViewModels.Reportes.InfoGralVM*@

@{
    ViewBag.Title = "ListadoReportes";
}
<br />
<br />

<h2>Usuarios por Area</h2>
<br />
@using (Html.BeginForm())
{

<div class="row">
    <div class="col-lg-6">

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th class="text-center">
                        Area
                    </th>
                    <th class="text-center">
                        Cantidad
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>
                            @Html.DisplayFor(modelItem => item.Area)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cantidad)
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </div>
    <div class="form-group" text-right>
        <div class="col-sm-6">
            <a href="@Url.Action("Print2", "Reporte")" class="btn btn-info" target="_blank">Imprimir PDF</a>
        </div>
    </div>


</div>
        }
