@model Inventario.ViewModels.VMInventario

@{
    ViewBag.Title = "Modificar usuario";
    Layout = null;
}



<div class="row">
    <div class="col-sm-12">
        <div>
            <br />
            <h4>Datos de los usuarios</h4>
            <br />
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.HiddenFor(Model => Model.Id_usuario)
    <div class="row">
        <div class="col-lg-6">
            <div class="form-horizontal">

                <div class="form-group">
                    <label class="col-sm-6 control-label">Nueva Contraseña</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.Password_usuario, htmlAttributes: new { @class = "form-control", @id = "txtPassword" })
                    </div>
                </div>
                <div class="form-group text-left">
                    <div class="col-xs-12">
                        <button class="btn btn-warning" type="submit">
                            Recuperar
                        </button>
                    </div>
                </div>
                <div class="form-group text-right">
                    <div class="col-xs-12">
                        <a href="@Url.Action("Login", "Login")" class="btn btn-info">Ir a login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

