<body>

    <br />
    <div class="row">

        @*<form id="form1" runat="server">*@

        <div class="col-lg-6">
            <div id="piechart" style="width: 100%; height: 300px;"></div>
        </div>
        <div class="col-lg-6">
            <div id="piechart_3d" style="width: 100%; height: 300px;"></div>
        </div>
        <div class="col-lg-12">
            <div id="top_x_div" style="width: 100%; height: 300px;"></div>
        </div>

    </div>

        <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
        <script type="text/javascript">
        @*********************************************************************@
        google.charts.load('current', { 'packages': ['corechart'] });
        google.charts.setOnLoadCallback(drawChart);

        function drawChart() {

            var data = google.visualization.arrayToDataTable(@Html.Raw(ViewBag.grafico));



            var options = {
                title: 'Usuarios por area',
                is3D: true,
            };

            var chart = new google.visualization.PieChart(document.getElementById('piechart_3d'));
            chart.draw(data, options);
        }
        @*********************************************************************@
        google.charts.setOnLoadCallback(drawChart2);
      function drawChart2() {

      var data = google.visualization.arrayToDataTable(@Html.Raw(ViewBag.grafico2));

        var options = {
          title: 'Ingresos de articulos en el ultimo mes'
        };

        var chart = new google.visualization.PieChart(document.getElementById('piechart'));

        chart.draw(data, options);
        }
        @*********************************************************************@
        google.charts.load('current', { 'packages': ['bar'] });
        google.charts.setOnLoadCallback(drawStuff);

        function drawStuff() {
        var data = google.visualization.arrayToDataTable(@Html.Raw(ViewBag.grafico2));

            var options = {
                title: 'Chess opening moves',
                width: 800,
                legend: { position: 'none' },
                chart: {
                    //title: 'Tipos de articulos',
                    //subtitle: 'popularity by percentage'
                },
                bars: 'horizontal', // Required for Material Bar Charts.
                axes: {
                    x: {
                        0: { side: 'top', label: 'Articulos por tipo en stock' } // Top x-axis.
                    }
                },
                bar: { groupWidth: "90%" }
            };

            var chart = new google.charts.Bar(document.getElementById('top_x_div'));
            chart.draw(data, options);
        };
        </script>


</body>
