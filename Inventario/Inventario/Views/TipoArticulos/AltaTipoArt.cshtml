@model Inventario.ViewModels.TipoArticulo
@{
    ViewBag.Title = "Alta de tipo de articulo";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br />
        <h4>NUEVO TIPO DE ARTICULO</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })



        <div class="form-group">
            <label class="col-sm-6" control-label>Tipo de articulo</label>
            <div class="col-sm-6">
                @Html.TextBoxFor(model => model.Descripcion_tipo_articulo, htmlAttributes: new { @class = "form-control", @id = "txtTipoArt", required = "required" })
            </div>
        </div>


    </div>


    <div class="form-group" text-right>
        <div class="col-sm-6">
            <button class="btn btn-primary" type="submit">Alta</button>
        </div>
        <br />
        <br />
        <div class="col-sm-12">
            <a href="@Url.Action("ListadoTipoArt", "TipoArticulos")" class="btn btn-warning">Ir al listado</a>
        </div>
    </div>
}
