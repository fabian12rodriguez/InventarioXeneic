<h2>Artículos sin usuarios asignados</h2>
<br />
@using (Html.BeginForm())
{


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre_articulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo_articulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desc_marca_articulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desc_tipo_articulo)
            </th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre_articulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Modelo_articulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Desc_marca_articulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Desc_tipo_articulo)
        </td>

    </tr>
        }

    </table>
}